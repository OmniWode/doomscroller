pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
--doomscroller.p8

function _init()
	--map_setup()
	make_player()
end

function _update()
	--happens 30 times a second
	handle_input()
end

function _draw()
	--also happens 30 times a
	--second, but after _update()
	cls()
	map(0,0,0,0,128,64)
	spr(p.spr, p.x, p.y)
	
	--testing ascii art
	--print(player.ch, player.x, player.y, player.color)
	--print("x",  67, 67, 8)

end

function handle_input()
	if btnp(0) then
		p.x -= p.w
	elseif btnp(1) then
		p.x += p.w
	elseif btnp(2) then
		p.y -= p.h
	elseif btnp(3) then
		p.y += p.h
	end
end

function make_player()
	p={}
	p.x=64
	p.y=64
	p.w=8
	p.h=8
	p.spr=1
end


