pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
--doomscroller.p8

function _init()
	--happens one time when the
	--game starts
	player = {
		sp=1,
		x=59,
		y=59,
		w=8,
		h=8
	}
end

function handle_input()
	if btnp(0) then
		player.x -= player.w
	end
	if btnp(1) then
		player.x += player.w
	end
	if btnp(2) then
		player.y -= player.h
	end
	if btnp(3) then
		player.y += player.h
	end
end


function _update()
	--happens 30 times a second
	handle_input()
end

function _draw()
	--also happens 30 times a
	--second, but after _update()
	cls()
	spr(player.sp, player.x, player.y)

end
